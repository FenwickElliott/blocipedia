  gem 'sqlite3'
end

gem 'sass-rails'
gem 'uglifier'
gem 'coffee-rails'
gem 'jquery-rails'
gem 'turbolinks'
gem 'bootstrap'
gem 'figaro'

gem 'listen'
gem 'devise'
gem 'pundit'

