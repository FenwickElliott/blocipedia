<div class='container'>
  <div class='row'>
    <div class='col-xs-8 col-offset-2'>
      <h1>Wikis</h1>
    </div>
    <% if current_user %>
      <div class='col-xs-2 pull-right'>
        <%= link_to "New", new_wiki_path, class: 'btn btn-success' %>
      </div>
    <% end %>
  </div>

  <div class='row'>
    <div class="media media-body media-heading col-xs-8 col-offset-2">
    <% @wikis.each do |wiki| %>
      <h4><%= link_to wiki.title, wiki %></h4>
    <% end %>
    </div>
  </div>
</div>
